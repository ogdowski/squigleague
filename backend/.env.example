# Backend Environment Variables Template
# Copy this file to .env and fill in your values

# ═══════════════════════════════════════════════
# APPLICATION
# ═══════════════════════════════════════════════

APP_NAME=SquigLeague
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=True

# ═══════════════════════════════════════════════
# DATABASE
# ═══════════════════════════════════════════════

DATABASE_URL=postgresql://squigleague:changeme@localhost:5432/squigleague
# For Docker: postgresql://squigleague:changeme@db:5432/squigleague

# ═══════════════════════════════════════════════
# SECURITY
# ═══════════════════════════════════════════════

SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ═══════════════════════════════════════════════
# GOOGLE OAUTH
# ═══════════════════════════════════════════════

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Setup: https://console.cloud.google.com/apis/credentials
# Authorized redirect URIs:
#   - http://localhost:8000/api/auth/google/callback
#   - https://yourdomain.com/api/auth/google/callback

# ═══════════════════════════════════════════════
# DISCORD OAUTH
# ═══════════════════════════════════════════════

DISCORD_CLIENT_ID=your-discord-application-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Setup: https://discord.com/developers/applications
# Redirect URIs:
#   - http://localhost:8000/api/auth/discord/callback
#   - https://yourdomain.com/api/auth/discord/callback

# ═══════════════════════════════════════════════
# URLS
# ═══════════════════════════════════════════════

BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# Production:
# BACKEND_URL=https://api.squigleague.com
# FRONTEND_URL=https://squigleague.com
