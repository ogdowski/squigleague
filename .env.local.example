# .env.local.example
# Local development environment configuration
# Copy this to .env.local for local development

# Database Configuration
DB_PASSWORD=dev_password_123

# Authentication
JWT_SECRET=dev_jwt_secret_change_in_production_12345

# Email Configuration (SMTP)
# For local dev, use MailHog or similar: docker run -p 1025:1025 -p 8025:8025 mailhog/mailhog
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=false
SMTP_FROM_EMAIL=noreply@squigleague.local
SMTP_FROM_NAME=SquigLeague

# Application
BASE_URL=http://localhost

# Herald Module
HERALD_ADMIN_KEY=dev_admin_key_123
ADMIN_IP=127.0.0.1

# VPS Configuration (not used in local development)
VPS_IP=localhost
VPS_USER=root

# Docker Registry (for image push/pull)
IMAGE_PREFIX=your_dockerhub_username
IMAGE_NAME=private

# Application Version
SQUIG_VERSION=0.2.1

# Domain Configuration (local development)
DOMAIN=localhost
EMAIL=dev@localhost
